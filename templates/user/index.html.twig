{% extends 'base.html.twig' %}

{% block title %}Hello GitHubUserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    form label { padding: 4px;}
</style>

<div class="example-wrapper">
    <h1>Find User Popular Programming Language</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
    {% if error_msg %}
        <p>
            There has been an error: {{ error_msg }}
        </p>
    {% endif %}
    {% if favourite_language %}
        <p>
            <h2>Favourite language</h2>
            <ul>
                <li>Username: <strong>{{ username }}</strong></li>
                <li>Favourite Language: <strong>{{ favourite_language }}</strong></li>
            </ul>
        </p>
        <p><a href="/" class="button">Reset</a></p>
    {% endif %}
</div>
{% endblock %}
